<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda_layout"
	android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="6sp"
	android:background="@color/white">

	<Button android:id="@+id/agenda_notice"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15px"
		android:background="@drawable/toimportant"
		android:layout_centerVertical="true"/>
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="60px"
		android:layout_marginRight="50px"
		android:layout_centerVertical="true">

		<TextView android:id="@+id/agenda_title" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="会议的名字可以很长很长"
			style="@style/Page_Info_First"
			/>
			<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_centerVertical="true">
		<TextView android:id="@+id/agenda_time" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 

			android:textSize="12sp"
 android:text="8:00-9:00"/>
		<TextView android:id="@+id/agenda_address" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 

			android:layout_marginLeft="20px"
			android:textSize="12sp"
  android:text="i am here !hey!"/>
		</LinearLayout>

	</LinearLayout>


	<Button android:id="@+id/agenda_view_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/more"
		android:layout_alignParentRight="true"
		android:layout_marginRight="15px"
		android:layout_centerVertical="true"/>
</RelativeLayout>